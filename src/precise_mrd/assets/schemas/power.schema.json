{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stratified Power Results",
  "type": "object",
  "required": [
    "schema_version",
    "stratified_results",
    "af_values",
    "depth_values",
    "contexts",
    "config_hash"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0.0"]
    },
    "stratified_results": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "mean_detection_rate": {"type": "number", "minimum": 0, "maximum": 1},
              "std_detection_rate": {"type": "number", "minimum": 0},
              "detection_rates": {
                "type": "array",
                "items": {"type": "number", "minimum": 0, "maximum": 1}
              },
              "n_replicates": {"type": "integer", "minimum": 1}
            },
            "required": ["mean_detection_rate", "n_replicates"],
            "additionalProperties": true
          }
        }
      }
    },
    "af_values": {
      "type": "array",
      "items": {"type": "number", "minimum": 0, "maximum": 1}
    },
    "depth_values": {
      "type": "array",
      "items": {"type": "integer", "minimum": 0}
    },
    "contexts": {
      "type": "array",
      "items": {"type": "string"}
    },
    "config_hash": {
      "type": "string",
      "minLength": 8
    }
  },
  "additionalProperties": true
}
